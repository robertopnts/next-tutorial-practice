// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Brand {
  id          Int     @id @default(autoincrement())
  name        String
  computers   Computer[]
}

model Computer {
  id      Int     @id @default(autoincrement())
  cpu     String  
  ram     Int
  gpu     String
  storage Int
  price   Int
  brand   Brand   @relation(fields: [brandId], references: [id])
  brandId Int
}